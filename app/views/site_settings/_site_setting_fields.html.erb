<div id="setting_<%= i %>" class="stack <%= new_setting?(model) ? 'new_setting_field' : 'existing_setting_field' %>">
  <div class="setting_label small_stack">
    <%= f.label model[0], nil, :class => "block w110 textFieldable small_round#{new_setting?(model) ? ' new_setting' : ''}", :title => 'Click on this label to edit it' %>
  </div>
  
  <div class="setting_field shadow_wrap">
    <%= text_field_tag "site_settings[#{model[0]}]", nil, setting_field_options(model) %>
    <%= link_to 'Delete', '#', :rel => "setting_#{i}", :class => 'iconOnly16 inline_delete_link before_confirm right note', :title => "Delete #{model[0]} field?" %>
  </div>
</div>